procedure TForm1.BitBtn6Click(Sender: TObject);
var XL:variant; iRow:integer;
begin
  try
    ADOQuery1.First;
    XL:=CreateOleObject('Excel.Application');
    XL.ReferenceStyle:=2;
    XL.Workbooks.add(getcurrentdir()+'/отчет.xls');
    XL.cells[1,1]:='Класс';
    XL.cells[1,2]:='Буква';
    XL.cells[1,3]:='Фамилия';
    XL.cells[1,4]:='Имя';
    XL.cells[1,5]:='Отчество';
    XL.cells[1,6]:='Пол';
    XL.cells[1,7]:='Дата рождения';
    iRow:=2;
    while not ADOQuery1.Eof do
      begin
        XL.cells[irow,1]:=ADOQuery1.FieldByName('Класс').AsString;
        XL.cells[irow,2]:=ADOQuery1.FieldByName('Буква').AsString;
        XL.cells[irow,3]:=ADOQuery1.FieldByName('Фамилия').AsString;
        XL.cells[irow,4]:=ADOQuery1.FieldByName('Имя').AsString;
        XL.cells[irow,5]:=ADOQuery1.FieldByName('Отчество').AsString;
        XL.cells[irow,6]:=ADOQuery1.FieldByName('Пол').AsString;
        XL.cells[irow,7]:=ADOQuery1.FieldByName('Дат_рож').AsString;
        inc(iRow);
        ADOQuery1.Next();
      end;
        XL.visible:=true;
  except
    MessageBox(Handle,'Таблица пуста','Ошибка', MB_OK+MB_ICONERROR);
  end;
end;

procedure TForm1.BitBtn7Click(Sender: TObject);
var XL:variant; iRow:integer;
begin
  with ADOQuery3 do
  begin
    Close;
    sql.Clear;
    sql.Add('SELECT * FROM tab1');
    Open;
  end;
  try
    ADOQuery3.First;
    XL:=CreateOleObject('Excel.Application');
    XL.ReferenceStyle:=2;
    XL.Workbooks.add(getcurrentdir()+'/отчет.xls');
    XL.cells[1,1]:='Класс';
    XL.cells[1,2]:='Буква';
    XL.cells[1,3]:='Фамилия';
    XL.cells[1,4]:='Имя';
    XL.cells[1,5]:='Отчество';
    XL.cells[1,6]:='Пол';
    XL.cells[1,7]:='Дата рождения';
    iRow:=2;
    while not ADOQuery3.Eof do
      begin
        XL.cells[irow,1]:=ADOQuery3.FieldByName('Класс').AsString;
        XL.cells[irow,2]:=ADOQuery3.FieldByName('Буква').AsString;
        //XL.WorkBooks[1].Columns[1].ColumnWidth := 4.5;
        XL.cells[irow,3]:=ADOQuery3.FieldByName('Фамилия').AsString;
        XL.cells[irow,4]:=ADOQuery3.FieldByName('Имя').AsString;
        XL.cells[irow,5]:=ADOQuery3.FieldByName('Отчество').AsString;
        XL.cells[irow,6]:=ADOQuery3.FieldByName('Пол').AsString;
        XL.cells[irow,7]:=ADOQuery3.FieldByName('Дат_рож').AsString;
        inc(iRow);
        ADOQuery3.Next();
      end;
        XL.visible:=true;
  except
    MessageBox(Handle,'Таблица пуста','Ошибка', MB_OK+MB_ICONERROR);
  end;
end;

procedure TForm1.Button1Click(Sender: TObject);
begin
  if OpenPictureDialog1.Execute then
  begin
    Jpeg:=TJPEGImage.Create;
    Jpeg.LoadFromFile(OpenPictureDialog1.FileName);
    DBImage1.Picture.Bitmap.Assign(Jpeg);//вот здесь его присваиваем bitmap
    Jpeg.Free;
    k:= true;
  end;
end;

