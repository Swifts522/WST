procedure TForm1.Delete();
var
  ButtonSelect:Integer;
begin
  ButtonSelect:= MessageBox(handle, PChar('Вы точно хотите удалить?'),PChar('Удаление'), MB_ICONQUESTION+MB_YESNO+MB_DEFBUTTON2);
  if ButtonSelect = idyes then
  begin
    with ADOQuery1 do
    begin
      Close;
      sql.Clear;
      sql.Add('DELETE FROM tab2 WHERE id = '+IntToStr(id));
      ExecSQL;
      Close;
      sql.Clear;
      sql.Add('DELETE FROM tab1 WHERE id_1 = '+IntToStr(id));
      ExecSQL;
    end;
    with ADOQuery1 do
    begin
      Close;
      sql.Clear;
      sql.Add('SELECT * FROM tab1');
      Open;
    end;
  end;
end;

procedure TForm1.Edit();
var
  bmp:TBitmap;
begin
  if k = true then
  begin
  jpeg:=TJPEGImage.Create;
  bmp:=TBitmap.Create;
  jpeg.LoadFromFile(OpenPictureDialog1.FileName);
  bmp.Assign(jpeg);
  ADOQuery1.Edit;
  ADOQuery1.FieldByName('Foto').Assign(bmp);
  ADOQuery1.Post;
    //ADOQuery1.SQL.Clear;
    //ADOQuery1.SQL.Add(' Update tab1 set foto = :img WHERE id_1 = '+IntToStr(id));
    //ADOQuery1.Parameters.ParamByName('img').Assign(DBImage1.Picture.Graphic);
    //ADOQuery1.ExecSQL;
  end;
  if DBImage1.Picture.Graphic = nil then
  begin
    ADOQuery1.Close;
    ADOQuery1.sql.Clear;
    ADOQuery1.sql.Add(' UPDATE tab1 set foto = "" WHERE id_1 = '+IntToStr(id));
    ADOQuery1.ExecSQL;
  end;
  with ADOQuery1 do
  begin
    Close;
    sql.Clear;
    sql.Add('UPDATE tab1 SET Класс = '''+ComboBox1.Text+''', Буква = '''+ComboBox2.Text+''', Фамилия = '''+Edit1.Text+''', Имя = '''+Edit2.Text+''', Отчество = '''+Edit3.Text+''', ');
    sql.Add('Пол = '''+ComboBox3.Text+''', Дат_рож = '''+Edit10.Text+''' WHERE id_1 = '+IntToStr(id));
    ExecSQL;
  end;
  with ADOQuery2 do
  begin
    Close;
    sql.Clear;
    sql.Add('UPDATE tab2 SET Нац = '''+Edit4.Text+''', Адрес_ул = '''+Edit5.Text+''', Адрес_дом = '''+Edit6.Text+''', Адрес_кв = '''+Edit7.Text+''', Адрес_тел = '''+Edit8.Text+''', ');
    sql.Add('Кл_рук_ФИО = '''+Edit9.Text+''' WHERE id = '+IntToStr(id));
    ExecSQL;
  end;
  with ADOQuery1 do
  begin
    Close;
    sql.Clear;
    sql.Add('SELECT * FROM tab1');
    Open;
  end;
end;

