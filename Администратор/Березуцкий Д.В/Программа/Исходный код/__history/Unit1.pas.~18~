procedure TForm1.TreeView1Change(Sender: TObject; Node: TTreeNode);
begin
  with ADOQuery1 do
  begin
    if TreeView1.Items.Item[1].Selected then
    begin
     try
      Close;
      sql.Clear;
      sql.Add('SELECT * FROM tab1 WHERE Класс = "1" AND Буква = "а"');
      Open;
      Button6.Show;
     except
        Close;
        sql.Clear;
        sql.Add('SELECT * FROM tab1');
        Open;
        ShowMessage('Подходящих записей нет');
     end;
    end
    else if TreeView1.Items.Item[2].Selected then
