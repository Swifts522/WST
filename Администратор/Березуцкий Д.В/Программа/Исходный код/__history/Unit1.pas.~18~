procedure TForm1.Button4Click(Sender: TObject);
begin
  if TreeView1.Visible = false then
  begin
    TreeView1.Visible:= true;
    Button4.Caption:= 'Отмена';
    DBGrid1.Width:= 426;
    DBGrid1.Left:= 135;
  end
  else
  begin
    TreeView1.Visible:= false;
    Button4.Caption:= 'Дерево';
    DBGrid1.Width:= 553;
    DBGrid1.Left:= 8;
    Button6.Hide;
  end;
end;

