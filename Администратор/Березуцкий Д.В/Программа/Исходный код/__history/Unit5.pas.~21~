procedure TForm5.BitBtn2Click(Sender: TObject);
var
  ButtonSelect:Integer;
  pred : integer;
  ids: integer;
  god, chet : integer;
begin
  pred:= ComboBox1.ItemIndex;
  ids:= DBGrid1.DataSource.DataSet.Fields[0].AsInteger;
  ButtonSelect:= MessageBox(handle, PChar('Вы точно хотите удалить?'),PChar('Удаление'), MB_ICONQUESTION+MB_YESNO+MB_DEFBUTTON2);
  if ButtonSelect = idyes then
  begin
    with ADOQuery1 do
    begin
      Close;
      sql.Clear;
      case pred of
        0 : sql.Add('DELETE FROM Algebra WHERE id = '+IntToStr(ids));
        1 : sql.Add('DELETE FROM Geometry WHERE id = '+IntToStr(ids));
        2 : sql.Add('DELETE FROM IstoriaK WHERE id = '+IntToStr(ids));
        3 : sql.Add('DELETE FROM IstoriaV WHERE id = '+IntToStr(ids));
        4 : sql.Add('DELETE FROM Trud WHERE id = '+IntToStr(ids));
        5 : sql.Add('DELETE FROM RussianLanguage WHERE id = '+IntToStr(ids));
        6 : sql.Add('DELETE FROM KazackLanguage WHERE id = '+IntToStr(ids));
        7 : sql.Add('DELETE FROM RussianLitra WHERE id = '+IntToStr(ids));
        8 : sql.Add('DELETE FROM Economy WHERE id = '+IntToStr(ids));
        9 : sql.Add('DELETE FROM Fizra WHERE id = '+IntToStr(ids));
      end;
      ExecSQL;
    end;
 with Form5.ADOQuery2 do
  begin
    Close;
    sql.Clear;
    sql.Add('SELECT * FROM ctv WHERE Код = '+IntToStr(Form5.ComboBox1.ItemIndex+1));
    Open;
  end;
  chet:= ComboBox2.ItemIndex+1;
  god:= DBGrid2.DataSource.DataSet.Fields[2].AsInteger;
  with Form5.ADOQuery1 do
  begin
      Close;
      sql.Clear;
      case Form5.ComboBox1.ItemIndex of
        0 : sql.Add('SELECT * FROM Algebra WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        1 : sql.Add('SELECT * FROM Geometry WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        2 : sql.Add('SELECT * FROM IstoriaK WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        3 : sql.Add('SELECT * FROM IstoriaV WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        4 : sql.Add('SELECT * FROM Trud WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        5 : sql.Add('SELECT * FROM RussianLanguage WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        6 : sql.Add('SELECT * FROM KazackLanguage WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        7 : sql.Add('SELECT * FROM RussianLitra WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        8 : sql.Add('SELECT * FROM Economy WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
        9 : sql.Add('SELECT * FROM Fizra WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
      end;
      Open;
  end;
  Update();
  end;
end;

