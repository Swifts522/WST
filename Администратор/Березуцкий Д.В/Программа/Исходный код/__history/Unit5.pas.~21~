  end;
  //
  with Form5.ADOQuery2 do
  begin
      Close;
      sql.Clear;
      sql.Add('SELECT sum(Оценка) as sq FROM IstoriaV WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
