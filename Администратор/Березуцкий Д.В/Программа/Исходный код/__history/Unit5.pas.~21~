  begin
      Close;
      sql.Clear;
      sql.Add('SELECT count(*) as sq FROM IstoriaK WHERE Год = '+IntToStr(god)+' AND Четверть = '+IntToStr(chet)+' AND id_1 = '+IntToStr(id));
